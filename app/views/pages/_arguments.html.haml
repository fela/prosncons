.span5
  %h2= option
  - @page.arguments_for(option).each do |a|
    %hr
    .row
      .span1.align-center.votes
        = link_to glyph('chevron-up'), '#', onclick: 'vote(this, 1)'
        %div 0
        = link_to glyph('chevron-down'), '#', onclick: 'vote(this, -1)'
      .span
        %h3
          = a.summary
          %small [#{link_to 'edit', edit_argument_path(a, option)}]
        :markdown
          #{a.description}

  - unless @page.arguments_for(option).empty?
    %hr
  =link_to 'Add argument', new_argument_path(option), class: 'btn'