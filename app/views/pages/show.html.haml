%p#notice= notice

%h3
  =@page.title
  - if can? :edit, @page
    %small
      [#{link_to 'edit', edit_page_path(@page)}]
.page-content
  :markdown
    #{@page.content}
  .pull-right
    = render partial: 'users/signature',
             locals: {user: @page.author, time: @page.created_at}
.row
  = render partial: 'arguments', locals: { option: @page.option1 }
  = render partial: 'arguments', locals: { option: @page.option2 }

